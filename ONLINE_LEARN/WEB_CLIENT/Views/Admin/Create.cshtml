@using Common.Enums;
@model List<string>
<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!-- Spinner End -->

<nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand"><i class="bi bi-person-circle"></i> WELCOME TO ADMIN</a>
        <form class="d-flex" action="/Admin">
            <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" name="name" required>
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</nav>

<section style="margin-top: 50px">
    <div class="row vh-100">
        <div class="col-lg-3">
            <ul class="list-group">
                <li class="list-group-item list-group-item-info"><a href="/ManagerUser">User Management</a></li>
                <li class="list-group-item list-group-item-info"><a href="/ManagerUser/Create">Create Teacher</a></li>
            </ul>
            <p class="text-danger" style="text-align: center">@ViewData["error"]</p>
            <p style="color: green;text-align: center">@ViewData["success"]</p>
            <br>
            <a href="/Logout" class="btn btn-lg btn-primary position-fixed bottom-0 start-0 ">Logout <i class="bi bi-box-arrow-right"></i></a>
        </div>

        <div class="col-lg-9">
            <form action="/Admin/Create" method="POST">
                <div class="container rounded bg-white mt-5 mb-5">
                    <div class="row">
                        <div class="col-md-12 border-right">
                            <div class="p-3 py-8">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-right">CREATE TEACHER ACCOUNT</h4>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-md-12"><label class="labels">FullName</label><input type="text" class="form-control" placeholder="Full Name" name="FullName" id="FullName" required></div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <label class="labels">Email</label>
                                        <input type="email" class="form-control" placeholder="Email" name="Email" id="email" required>
                                    </div>


                                    <div class="col-md-12">
                                        <label class="labels">Phone(Optional)</label>
                                        <input type="text" class="form-control" placeholder="Phone" name="Phone" id="phone">
                                    </div>


                                    <div class="col-md-12">
                                        <label class="labels">Gender</label>
                                        <select name="Gender" class="form-control">
                                            @foreach (string gender in Model)
                                            {
                                                <option value="@gender">@gender</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="col-md-12">
                                        <label class="labels">Username</label>
                                        <input type="text" class="form-control" placeholder="Your username" name="Username" id="username" required>
                                    </div>
                                </div>

                                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit" onclick="myFunction()">Submit</button></div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    function myFunction() {
        var FullName = document.getElementById("FullName");
        var phone = document.getElementById("phone");
        const regexUsername = new RegExp("^[a-zA-Z0-9]*$");
        const regexNumber = new RegExp("^[0-9]");
        var username = document.getElementById("username");
        if (FullName.value.toString().trim().length === 0) {
            document.getElementById("error").innerHTML = "You have to input your name";
            handleSubmit(event);
        } else if (phone.value.toString().length !== 0 && phone.value.toString().length !== @((int)UserInfo.Phone_Length)) {
            document.getElementById("error").innerHTML = "Phone must be " + @((int)UserInfo.Phone_Length) +" numbers";
            handleSubmit(event);
        } else if (!regexUsername.test(username.value.toString()) || username.value.toString().length > @((int)UserInfo.Max_Length_Username) || username.value.toString().length < @((int)UserInfo.Min_Length_Username) || regexNumber.test(username.value.toString())) {
            document.getElementById("error").innerHTML = "The username starts with alphabet , contains only alphabet and numbers, at least " + @((int)UserInfo.Min_Length_Username) +" characters, max " + @((int)UserInfo.Max_Length_Username) +" characters";
            handleSubmit(event);
        }
    }

    function handleSubmit(event) {
        event.preventDefault();
    }
</script>
